    {
      "name": "Create new record in a collection",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "response = pm.response.json();\r",
              "\r",
              "pm.collectionVariables.set(\"recordId\", response.data.id);\r",
              "\r",
              "pm.test(\"Response should return a 201 status code\", () => {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "pm.test(\"Response should contain valid ID\", () => {\r",
              "    const id = response.data.id;\r",
              "    pm.expect(id).to.eql(pm.collectionVariables.get(\"recordId\"));\r",
              "    pm.expect(response.data.id).to.be.a(\"string\");\r",
              "});\r",
              "\r",
              "pm.test(\"Response should contain name and amount\", () => {\r",
              "    pm.expect(response.data).to.have.property(\"collection_id\");\r",
              "    pm.expect(response.data).to.have.property(\"project_id\");\r",
              "});"
            ],
